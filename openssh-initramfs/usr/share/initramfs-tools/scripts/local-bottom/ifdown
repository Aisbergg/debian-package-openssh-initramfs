#!/bin/sh

PREREQ=""

prereqs() {
    echo "$PREREQ"
}

case "$1" in
    prereqs)
        prereqs
        exit 0
    ;;
esac

IFDOWN="*"
if [ -e /etc/openssh-initramfs/config ]; then
    . /etc/openssh-initramfs/config
fi

for IFACE in /sys/class/net/${IFDOWN}; do
    [ -e "$IFACE" ] || continue
    IFACE="${IFACE#/sys/class/net/}"
    ip link    set   dev "$IFACE" down
    ip address flush dev "$IFACE"
    ip route   flush dev "$IFACE"
done
